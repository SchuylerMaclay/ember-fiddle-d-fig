<div class="container">

  <div class="container">

    <h2>Dashboard</h2>

    <h1>{{model.name}}</h1>
    <h3>email: {{model.email}}</h3>
  </div>


  <div class="container">
    <h2>UserPlants</h2>
    {{#each model.userPlants as |userPlant|}}
    <div class="panel panel-default">
      <div class="panel-heading">Plant Species: {{userPlant.plant.name}}</div>
      <div class="panel-body">
        your plant name: {{userPlant.name}}
      </div>
<!--       <div class="panel-body">
        Status {{userPlant.ownership}}
      </div> -->
      <button class="btn btn-primary btn-xs" {{action 'delete' userPlant}}>Delete</button>
    </div>
    {{/each}}
  </div>

  <div class="container">
    <h2>reviews</h2>
  {{#each model.reviews as |review|}}
    <div class="panel panel-default">
      <div class="panel-heading">Plant: {{review.plant.name}}</div>
      <div class="panel-body">
        Content: {{review.content}}
      </div>
    </div>
  {{/each}}
  </div>

  <a href="#" {{action 'logout'}}>Logout</a>

  {{outlet}}
</div>
