<form {{action "save" on="submit"}}>
  <h2>{{errorMessage}}</h2>
  <p>
    <label>Name:
      {{input value=plant.name}}
    </label>
  </p>
  <p>
    <label>Image URL:
      {{input value=plant.imageUrl}}
    </label>
  </p>
  <p>
    <label>Description:
      {{input value=plant.description }}
    </label>
  </p>
  <p>
    <label>Light:
      {{input value=plant.light}}
    </label>
  </p>
  <p>
    <label>Water:
      {{input value=plant.water}}
    </label>
  </p>
  <!-- <input type="submit" value="Save"/> -->
  <button {{action "save" plant}}>Save</button>
  <button {{action "cancelEdit"}}>Cancel</button>
</form>

