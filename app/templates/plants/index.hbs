
{{#each model as |plant|}}

    <div id="card" class="col-sm-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">{{link-to plant.name "plants.plant" plant }}</h3>
        </div>
          <img style="width:100%;"{{bind-attr src=plant.imageUrl}} >
        <div class="panel-body">
          <p style="margin-top:10px; font-size:11px;">{{plant.description}}</p>
        </div>
      </div>
    </div>
{{/each}}
<div style="height:500px; width:200px;"></div>

{{#draggable-object-target action="dragResult" resultText='Drag is Complete' dragOverAction='draggingOverTarget' dragOutAction='leftDragTarget' overrideClass='dropTarget'}}

  {{#if dragFinishText}}
    {{dragFinishText}}sub
  {{else}}
    Drag here to complete Action
  {{/if}}

{{/draggable-object-target}}



{{#draggable-object content=myObject  dragStartAction='dragStart' dragEndAction='dragEnd' overrideClass='dragObject'}}

  {{#if dragStartedText}}
    {{dragStartedText}}
  {{else if dragEndedText}}
    {{dragEndedText}}
  {{else}}
    Drag Me
  {{/if}}

{{/draggable-object}}

<!-- {{link-to "Add New Plant" "plants.new"}} -->
{{outlet}}


